
@model hunzi.Blog.Model.CategoryModel
@{
    Layout = "~/Areas/Areas/Views/Shared/_Layout.cshtml";
}
<div style="margin:10px;">
    <a class="layui-btn" href="/Areas/Category/Add">
        <i class="layui-icon layui-icon-add-1"></i>
        添加
    </a>
    <div>
        <table class="layui-table">
            <thead>
                <tr>
                    <th>分类编号</th>
                    <th>分类名称</th>
                    <th>分类描述</th>
                    <th align="center">操作</th>
                </tr>
            </thead>
            <tbody>

                @foreach (hunzi.Blog.Model.CategoryModel item in ViewBag.CaList)
                {
                    <tr>
                        <td>@item.CBh</td>
                        <td>@item.CName</td>
                        <td>@item.Remark</td>
                        <td>
                            <a href="/Areas/Category/Add/@item.Cid"><i class="layui-icon layui-icon-edit"></i>编辑</a>
                            <a href="javascript:viod()0" onclick="Del(@item.Cid)"><i class="layui-icon layui-icon-delete"></i>删除</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
<script>
    function Del(id) {
        layui.use(['layer'], function () {
            var layer = layui.layer, $ = layui.jquery;
            var url = "/Areas/Category/Delete/" + id;
            layer.confirm('是否确认删除?', function () {
                $.post(url, function (mse) {
                    layer.alert(mse, function () { location.reload() });
                })

            })
        });
    };
</script>